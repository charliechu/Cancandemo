<ul>
    <% @posts.each do |post| %>
        <li>
            <%= link_to(post.subject, post_path(post)) %>
            <%= link_to("Edit", edit_post_path(post)) %>
            <%= link_to("Destroy", post_path(post), :method => :delete)%>
        </li>
    <% end %>
</ul>

<%= link_to("New Post", new_post_path) %>